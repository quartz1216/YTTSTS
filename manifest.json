{
    "manifest_version": 3,
    "name": "YTTSTS",
    "version": "1.0",
    "description": "YouTube TransScript to Speech",
    "permissions": ["storage", "tts", "tabs"],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["https://www.youtube.com/*"],
        "js": ["content.js"]
      }
    ],
    "action": {
      "default_popup": "popup.html"
    },
    "host_permissions": ["https://www.youtube.com/*"]
  }
  